{
  "name": "@foundry-mcp/server",
  "version": "0.4.5",
  "description": "MCP server for Foundry VTT integration with Claude Desktop",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:bundle": "tsc && esbuild dist/index.js --bundle --platform=node --target=node18 --outfile=dist/index.bundle.cjs --format=cjs",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:bundle": "node dist/index.bundle.cjs",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^16.3.0",
    "ws": "^8.14.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "foundry-vtt",
    "claude",
    "ai"
  ]
}
