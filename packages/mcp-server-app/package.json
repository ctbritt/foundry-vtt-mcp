{
  "name": "foundry-mcp-server",
  "productName": "Foundry MCP Server",
  "version": "0.4.5",
  "description": "Professional MCP server for Foundry VTT AI model integration",
  "main": "dist/app.js",
  "author": {
    "name": "Adam Dooley",
    "email": "adambriandooley@gmail.com",
    "url": "https://github.com/adambdooley"
  },
  "homepage": "https://github.com/adambdooley/foundry-vtt-mcp-integration",
  "repository": {
    "type": "git",
    "url": "https://github.com/adambdooley/foundry-vtt-mcp-integration.git"
  },
  "bugs": "https://github.com/adambdooley/foundry-vtt-mcp-integration/issues",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:app",
    "build:app": "node scripts/build-app.js",
    "dev": "tsc --watch",
    "start": "electron dist/app.js",
    "pack": "npm run build && electron-builder --publish=never",
    "dist": "npm run build && electron-builder --publish=always"
  },
  "dependencies": {
    "electron-updater": "^6.1.0",
    "node-notifier": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-notifier": "^8.0.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.foundry-mcp.server",
    "productName": "Foundry MCP Server",
    "copyright": "Copyright Â© 2025 Adam Dooley",
    "directories": {
      "output": "../../dist/installers",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "resources/**/*",
      "!src/**/*",
      "!scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "../mcp-server/dist",
        "to": "mcp-server",
        "filter": ["**/*"]
      },
      {
        "from": "../mcp-server/node_modules",
        "to": "mcp-server/node_modules",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "displayLanguageSelector": false,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico"
    },
    "dmg": {
      "title": "Foundry MCP Server",
      "icon": "resources/icon.icns",
      "background": "resources/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}