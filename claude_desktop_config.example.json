{
  "mcpServers": {
    "foundry-mcp": {
      "command": "ssh",
      "args": [
        "foundry@foundry.azthir-terra.com",
        "-p", "22",
        "node",
        "/home/foundry/foundry-vtt-mcp/packages/mcp-server/dist/index.js"
      ],
      "env": {
        "LOG_LEVEL": "info"
      }
    }
  }
}

